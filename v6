import time

shape_list = ['Straight', '90', '45', 'Tee', 'Cross', 'Cap', 'Exit']
size_list = ['-4', '-6', '-8', '-10', '-12', '-16', '-20', 'Back']
type_list = [
    'Male JIC', 'Female JIC', 'Male Pipe', 'Female Pipe', 'Bulkhead',
    'Female JIC Swivel', 'Male O-ring', 'Female O-ring', 'Male Adj. O-ring',
    'Female Pipe Swivel', 'Beaded', 'Gauge Port', 'Bore', 'Male ORFS',
    'Female ORFS', 'ORFS Bulkhead', 'ORFS Female Swivel', 'O-ring Gauge Port',
    'Back'
]

                 
def side2():
  def size_choice():
    print('Please choose the size of the 1st fitting type:')
    print(fit_type1)
    print("program over bitch, go home")
  
  
  side2type = ''
  print("Please Select second fitting end type and press enter ")
  print()
  while side2type not in type_list:
    
    print()
    for i in type_list:
      print(type_list.index(i) + 1, end='')
      print(" ", i)
    side2type = input()

    if side2type == '1':
      print("nice")
      size_choice()
    if side2type == '2':
      print('lol')
      size_choice()

      

def fit_type1():
  choice2 = '' 
  print("Please Select first fitting end type and press enter ")
  while choice2 not in type_list:
  
    print()
    for i in type_list:
      print(type_list.index(i) + 1, end='')
      print(" ", i)
    choice2 = input()
    
    if choice2 == '1':
      print('Male JIC')
      side2()
    if choice2 == '2':
      print('Female JIC')
      side2()
