  #     time.sleep(0.5)
  #     print("idiot")
  #     time.sleep(1)
  #     fit_type1()

    if choice2 == '19':
      print("Ok I guess we already fucked up....Idiot")
      time.sleep(2)
      input("Press enter to continue")
      fitting_selector()

  return choice2
  

