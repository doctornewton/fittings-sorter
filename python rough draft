def display(shape_list):
    counter = 0
    shape_record = {}
    for tables in shape_list:
        counter += 1
        shape_record[counter] = tables
        print("%s. %s" % (counter, tables))
    return shape_record

def get_list(shape_record):
    print("\:")
    choose = input()
    choose = int(choose)

    if choose in shape_record:        
        print(shape_record[choose])


