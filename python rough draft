shape_list = ['Straight', '90', '45', 'Tee', 'Cross']
size_list = ['-4', '-6', '-8', '-10', '-12', '-16', '-20']
type_list = ['Male JIC', 'Female JIC']

li = ['ID', 'Customers', 'Employees', 'Orders']

def display(shape_list):
    print("Welcome, please select a fitting shape below") 
    #Iterate through the list using enumerate and print
    for idx, tables in enumerate(shape_list):
        print("%s. %s" % (idx+1, tables))

def get_list(shape_list):
    choose = int(input("\nPick a shape:"))-1
    #If choose is not a valid index in list, print error and return empty string
    
    if choose < 0 or choose > (len(shape_list)-1):
        print('Invalid Choice')
        return ''
    #Else return chosen string
        return shape_list[choose]

def main():
    display(shape_list)
    print(get_list(shape_list))


if __name__ == "__main__":
    main()
    
    
    
    
